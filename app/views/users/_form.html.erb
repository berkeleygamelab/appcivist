<%= form_tag sessions_path do %>
    <label>Your login</label>
    <%= text_field_tag :login, params[:login], :size => 18, :id=>'username', :class=>'span3' %>
    <label>Your password</label>
    <%= password_field_tag :password, nil, :size => 18, :id=>'password_password', :class=>'span3' %>

    <br>
      <%= submit_tag "Sign in", :class => 'btn' %>


<% end %>
